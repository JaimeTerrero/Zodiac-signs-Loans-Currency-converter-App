@model LoansApplication.ViewModel.PrestamosListViewModel
@{
    ViewData["Title"] = "Index";
    int index = 1;
}


<div class="row">
    <div class="col-md-12 placeholder placeholder-lg bg-primary text-white mb-5 br-12">

        <h1 class="text-center">Resultado Obtenido</h1>

    </div>
</div>

<div class="row">
    <div class="col-md-4 offset-4">
        <div class="card">
          <div class="card-header bg-secondary">
            <h3 class="text-center text-white">Total a pagar</h3>
          </div>
          <div class="card-body">
            <table class="table table-secondary responsive">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Total</th>
                </tr>
              </thead>
              <tbody>


                  @foreach (var item in Model.Prestamos)
                 {
                    <tr>
                      <th scope="row">@index</th>
                      <td>@item.Resultado</td>
                    </tr>

                    index++;
                     
                 }
              </tbody>
            </table>
          </div>
        </div>
    </div>
</div>