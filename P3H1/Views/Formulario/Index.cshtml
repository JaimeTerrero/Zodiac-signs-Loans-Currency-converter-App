@model FormApplication.ViewModel.SignoListViewModel
@{
    ViewData["Title"] = "Index";
    int index = 1;
}

<div class="row">
    <div class="col-md-12 placeholder placeholder-lg bg-primary text-white mb-5 br-12">
        <h1 class="text-center">Signo Sodiacal</h1>
    </div>
</div>

<div class="col-md-4 offset-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="text-center">Datos Obtenidos</h3>
        </div>
        <div class="card-body">

            @if(Model.SignoList.Count == 0){
                <h3 class="text-center">No hay nada aún</h3>
            }else{
                <table class="table table-primary table-responsive">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Signo</th>
                      <th scope="col">Fecha</th>
                    </tr>
                  </thead>
                  <tbody>

                      @foreach (var item in Model.SignoList)
                     {
                        <tr>
                          <th scope="row">@index</th>
                          <td>@item.Name</td>
                          <td>@item.Fecha</td>
                        </tr>

                         index++;
                     }
                  </tbody>
                </table>
            }
        </div>
    </div>
</div>